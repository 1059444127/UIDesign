	x:Class="Monitor.exam_Task"
	x:Name="Window"
	Title="Task"
    Style="{StaticResource WindowStyle}"
    Height="602" 
    Width="813"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">
    <Window.Resources>

        <coverter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <DataTemplate x:Key="DataGrid_DataTemplate">
